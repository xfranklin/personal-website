{
  "plugins": ["prettier-plugin-jinja-template"],
  "overrides": [
    {
      "files": ["**/*.njk"],
      "options": {
        "parser": "jinja-template"
      }
    }
  ],
  "printWidth": 100,
  "tabWidth": 2,
  "semi": true,
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "none",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always"
}
